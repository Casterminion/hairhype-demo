# Cache static assets aggressively
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images with long-lived cache
/assets/*.jpg
  Cache-Control: public, max-age=31536000, immutable
/assets/*.png
  Cache-Control: public, max-age=31536000, immutable
/assets/*.gif
  Cache-Control: public, max-age=31536000, immutable
/assets/*.webp
  Cache-Control: public, max-age=31536000, immutable
/assets/*.svg
  Cache-Control: public, max-age=31536000, immutable

# Cache videos
/assets/*.mp4
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts with long-lived cache
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
/*.woff
  Cache-Control: public, max-age=31536000, immutable
/*.ttf
  Cache-Control: public, max-age=31536000, immutable

# Cache CSS and JS with versioning
/*.css
  Cache-Control: public, max-age=31536000, immutable
/*.js
  Cache-Control: public, max-age=31536000, immutable

# HTML with short cache and revalidation
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Root index.html
/
  Cache-Control: public, max-age=0, must-revalidate
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()

# Service worker (if present)
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

# Sitemap and robots
/sitemap.xml
  Cache-Control: public, max-age=3600, must-revalidate
/robots.txt
  Cache-Control: public, max-age=3600, must-revalidate

# Enable Compression and Security headers for all pages
/*
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  # Supabase and webhooks removed for demo/case study version
  # frame-ancestors * allows embedding in iframes
  Content-Security-Policy: default-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com https://tile.openstreetmap.org https://www.instagram.com https://images.unsplash.com; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: blob:; font-src 'self' https://fonts.gstatic.com data:; connect-src 'self'; frame-src 'self' https://www.instagram.com; frame-ancestors *;
  Content-Encoding: br, gzip
  Vary: Accept-Encoding
